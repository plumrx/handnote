// button
.el-button
  &--secondary
    border-color $secondary
  &--text
    color $secondary

  &:focus
  &:hover
    color $primary
    border-color $tertiary
    background-color "hsla(%s, 100%, 95%, 1)" % $colorAngle

// input
.el-input
  &__inner
    &:focus
      border-color $primary
  &-number
    &__decrease
    &__increase
      &:hover
        color $tertiary
        &:not(.is-disabled)~.el-input
          .el-input__inner:not(.is-disabled)
            border-color @color

// select
.el-select
  .el-input
    &.is-focus .el-input__inner
    &__inner:focus
      border-color $tertiary
  &-dropdown__item.selected
    color $primary

// radio
.el-radio
  &-button
    &__orig-radio:checked + .el-radio-button__inner
      background-color $secondary
      border-color @background-color
      box-shadow -1px 0 0 0 @background-color

    &__inner:hover
      color $secondary
