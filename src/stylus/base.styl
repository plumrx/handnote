// root css variables
:root
  --color-primary: #59b6d7
  --color-secondary lighten(#59b6d7, 30%)
  --color-warning pink
  --color-danger red
  --color-info #888
  --color-angel 0

*
  box-sizing inherit
  transition .3s all

html
body
#app
[class^='p-']
  height 100%

body
  box-sizing border-box
  padding 0
  margin 0 auto
  font-family 'Avenir', Helvetica, sans-serif
  font-smoothing antialiased
  color #2c3e50
